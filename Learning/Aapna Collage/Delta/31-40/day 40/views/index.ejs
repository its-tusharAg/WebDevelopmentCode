<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My chotoRoom</title>
    <link rel="stylesheet" href="style.css" />
  </head>
  <body>
    <h1>All Bakwas Chats</h1>
    <form action="/chats/new" method="get">
      <button>Add new Chat</button>
    </form>
    <% for(let chat of chats){ %>
    <div class="chats">
      <p>From: <%= chat.from %></p>
      <div class="msgs">
        <p>Message: <%= chat.msg %></p>
        <form action="/chats/<%= chat._id %>/edit" method="get">
          <button>Edit</button>
        </form>
      </div>
      <p>This is for you <%= chat.to %></p>
      <p><%= chat.create_at %></p>
      <form action="/chats/<%= chat._id %>?_method=DELETE" method="POST">
        <button>Delete</button>
      </form>
    </div>
    <br />
    <br />
    <br />
    <% } %>
  </body>
</html>
