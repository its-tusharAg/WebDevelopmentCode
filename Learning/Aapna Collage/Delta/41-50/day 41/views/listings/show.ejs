<%- layout("layouts/boilerplate.ejs") %>
<body>
    
    <p>Title: <%= listing.title %></p>
    <p>Description: <%= listing.description %></p>
    <img src="<%=listing.image.url %>" alt="" height="200px">
    <p>Price: <%= listing.price.toLocaleString("en-IN") %></p>
    <p>location: <%= listing.location %></p>
    <p>Country: <%= listing.country %></p>

    <form action="<%=listing._id%>/edit" method="get">
        <button>Edit</button>
    </form><br><br>
    <form action="<%=listing._id%>?_method=delete" method="post">
        <button>delete</button>
    </form>
</body>
